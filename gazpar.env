# GRDF credentials
GRDF_USERNAME=your_email@example.com
GRDF_PASSWORD=your_password

# MQTT settings
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_TOPIC=gazpar
MQTT_CLIENTID=gazpar
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password
MQTT_QOS=0
MQTT_RETAIN=True
MQTT_SSL=False

# Application settings
STANDALONE_MODE=True
SCHEDULE_TIME=06:30
TZ=Europe/Paris

# Home Assistant settings
HASS_DISCOVERY=True
HASS_PREFIX=homeassistant
HASS_DEVICE_NAME=gazpar
HASS_LTS=True
HASS_LTS_DELETE=False
HASS_LTS_TOKEN=your_long_lived_access_token
HASS_LTS_URI=/api/services/recorder/import_statistics
HASS_LTS_HOST=homeassistant.local:8123

# Threshold settings
THRESOLD_PERCENTAGE=80

# InfluxDB settings (optional)
INFLUXDB_ENABLE=False
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_ORG=your_org
INFLUXDB_BUCKET=gazpar
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_HORIZON=0

# Price settings
PRICE_KWH_DEFAULT=0.1033
PRICE_FIX_DEFAULT=0.76

# Database settings
DB_PATH=/data